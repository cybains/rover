version: 3
model_version: "v3.0"
prompt_version: "v3.0"

selector:
  rule: enriched_at_missing_or_stale

batch:
  size: 50
  max_concurrency: 2
  max_jobs_total: 0

timeouts:
  llm: 180

llm:
  base_url: http://127.0.0.1:8080
  model: Phi-3.5-mini-instruct-Q5_K_S.gguf
  temperature: 0.1
  max_input_chars: 3500
  max_output_tokens: 256

qa:
  publish_min_score: 75

ontology:
  remote_patterns:
    - "\\bfully remote\\b"
    - "\\bremote[- ]first\\b"
    - "\\bwork from home\\b"
    - "\\banywhere\\b"
  hybrid_patterns:
    - "\\bhybrid\\b"
    - "\\b\\d+ days onsite\\b"
    - "\\b\\d{1,3}% onsite\\b"
  onsite_patterns:
    - "\\bonsite\\b"
    - "\\bon[- ]site\\b"
